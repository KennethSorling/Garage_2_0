
@{
    ViewBag.Title = "Find Member";
}

<h2>Find Member</h2>
<div class="container">

@using (Html.BeginForm("Find",
            "Members",
            new {},
            FormMethod.Post,
            new {}))

{
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label class="control-label col-md-2" for="by">Search Field</label>
        <select class="form-control" name="by" id="by">
            <option value="firstname">First Name</option>
            <option value="lastname">Last Name</option>
            <option value="age">Age</option>
            <option value="phone">Phone Number</option>
        </select>
    </div>
    <div class="form-goup">
        <label class="control-label col-md-2" for="criteria">Search text</label>
        <input type="search" class="form-control text-box" name="criteria" id="criteria" required />
    </div><br>
    <div class="form-goup">
        <label class="control-label col-md-2"></label>
        <input type="submit" class="btn btn-default" value="Find" />
    </div>
}
    @Html.ActionLink("Back To List", "Index")
</div>

